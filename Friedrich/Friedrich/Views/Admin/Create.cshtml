    <table class="table">
        <tr>
            <td>
                <label>Model: </label>
            </td>
            <td>
                <input type="text" name="brand.Model" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Company: </label>
            </td>
            <td>
                <input type="text" name="brand.Company" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Year: </label>
            </td>
            <td>
                <input type="text" name="year" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Price: </label>
            </td>
            <td>
                <input type="text" name="price" />
